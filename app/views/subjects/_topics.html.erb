
<h2>Topics</h2>

<% if @subject.topics.any? %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @subject.topics.each do |topic| %>
          <tr>
            <td><%= topic.id %></td>
            <td><%= topic.title %></td>
            <td><%= link_to 'Show', subject_topic_path(subject_id: @subject.id, id: topic.id), class: 'btn btn-default' %></td>
            <td><%= link_to 'Edit', edit_subject_topic_path(subject_id: @subject.id, id: topic.id), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Destroy', subject_topic_path(subject_id: @subject.id, id: topic.id), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <%= alert_box "Subject \"#{@subject.title}\" does not have any topics", dismissible: true %>
<% end %>

<%= link_to new_subject_topic_path(subject_id: @subject.id), class: 'btn btn-success', data: { :'disable_with' => 'Loading...' } do %>
    <%= fa_icon 'plus', text: 'New Topic' %>
<% end %>